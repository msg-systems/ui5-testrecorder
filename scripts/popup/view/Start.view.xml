<mvc:View controllerName="com.ui5.testing.controller.Start" 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:f="sap.ui.layout.form" 
    xmlns:code="sap.ui.codeeditor" 
    xmlns:u="sap.ui.unified" 
    xmlns:av="sap.f" 
    xmlns:core="sap.ui.core">
    <Page class="sapUiSizeCompact" title="UI5 Automated Testing">
        <VBox fitContainer="true" height="100%">
            <core:Icon size="128px" decorative="false" press="onRecord" color="red" src="sap-icon://record">
                <core:layoutData>
                    <FlexItemData alignSelf="Center"/>
                </core:layoutData>
            </core:Icon>
            <layoutData>
                <FlexItemData alignSelf="Center"/>
            </layoutData>
        </VBox>
    </Page>
</mvc:View>