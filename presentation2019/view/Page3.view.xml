<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="sap.ui.demo.todo.controller.Page3">
    <Page enableScrolling="false">
        <customHeader>
            <Bar class="topBar">
                <contentLeft>
                    <Image src="assets/msgLogo.png" height="100%" />
                </contentLeft>
                <contentMiddle>
                    <Label text="{i18n>worklistViewTitle}" class="headerTitle" />
                </contentMiddle>
                <contentRight>
                    <Image src="assets/testrecorder_ico.svg" height="100%"/>
                    <Label text="{i18n>presTitle}"/>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
			<Table
				id="itemTable"
				width="auto"
				class="sapUiResponsiveMargin"
				growing="true"
				items="{
					path: 'mainData>/Posts',
					sorter: {
						path: 'Title',
						descending: false
						}
					}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				updateFinished=".onUpdateFinished">
				<headerToolbar>
					<Toolbar>
						<Label id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField id="searchField" width="auto" search=".onFilterPosts" />
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="33%" id="nameColumn" vAlign="Middle">
						<Text text="{i18n>TableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column width="33%" id="categoryColumn" vAlign="Middle">
						<Text text="{i18n>TableCategoryColumnTitle}" id="categoryColumnTitle"/>
					</Column>
					<Column width="33%" id="unitNumberColumn" hAlign="End" vAlign="Middle">
						<Text text="{i18n>TableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
					</Column>
					<Column width="80px" id="flaggedColumn" demandPopin="true" vAlign="Middle"/>
				</columns>
				<items>
					<ColumnListItem
						vAlign="Middle"
						type="Navigation"
						press=".onPress">
						<cells>
							<ObjectIdentifier
								title="{mainData>Title}"/>
							<Text
								text="{mainData>Category}"/>
							<ObjectNumber
								number="{
										path: 'mainData>Price',
										formatter: '.formatter.numberUnit'
									}"
								state="{
										path: 'mainData>Price',
										formatter: '.formatter.priceState'
									}"
								unit="{mainData>Currency}"/>
							<ToggleButton
								id="flaggedButton"
								tooltip="{i18n>flaggedTooltip}"
								icon="sap-icon://flag"
								pressed="{
										path: 'mainData>Flagged',
										type: '.types.flagged'
									}"
								class="sapUiMediumMarginBeginEnd"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <Text text="{i18n>copyright}" />
                </contentLeft>
                <contentMiddle>
                    <Button id="left3" icon="sap-icon://arrow-left" press="priorSlide" enabled="{= ${/siteNum} &gt; 0 }" />
                    <Button id="up3" icon="sap-icon://arrow-top" press="_slideUp" enabled="{= ${page3View>/subNav} &gt; 0 }" visible="{page3View>/subActive}"/>
                    <Button id="down3" icon="sap-icon://arrow-bottom" press="_slideDown" enabled="{= ${page3View>/subNav} &lt; ${page3View>/maxSub} }"  visible="{page3View>/subActive}"/>  
                    <Button id="right3" icon="sap-icon://arrow-right" press="nextSlide" enabled="{= ${/siteNum} &lt; (${/slideSequence}.length -1) }" />
                </contentMiddle>
                <contentRight>
                    <Text text="{parts: [{path: '/siteNum'}, 
                                         {path: '/slideSequence'}], 
                                 formatter: '.formatter.setSlideNumber'}" />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>